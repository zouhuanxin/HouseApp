<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.RegisterFragment">
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_register_title"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:background="@drawable/shape_login_etline"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/et_register_name"
            android:hint="账号"
            android:layout_below="@+id/tv_register_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:background="@drawable/shape_login_etline"
            android:inputType="textPassword"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/et_register_pwd"
            android:hint="密码"
            android:layout_below="@+id/et_register_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:background="@drawable/shape_login_etline"
            android:inputType="textPassword"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/et_register_repwd"
            android:hint="请重新输入密码"
            android:layout_below="@+id/et_register_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/shape_login_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register"
            android:layout_below="@id/et_register_repwd"
            android:layout_margin="@dimen/dp_10"
            android:text="@string/register"
            android:enabled="false"/>
    </RelativeLayout>
</RelativeLayout>